---
layout: base
schema: blog
preloads:
href: '/assets/fonts/robotomono/robotomono-variablefont_wght-webfont.woff2'
as: 'font'
type: 'font/woff2'
crossorigin: true
---

<article class="region blog">
  <div class="wrapper flow prose">
    <h1 class="gradient-text">{{ title }}</h1>

    <p>Published: {% set definedDate = date %} {% include "partials/date.njk" %}</p>

    <p>Updated: {% set definedDate = updated %} {% include "partials/date.njk" %}</p>

    {{ content | safe }}
  </div>
</article>