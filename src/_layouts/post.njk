---
layout: base
schema: blog
---

<article class="region blog">
  <div class="wrapper flow content">
    <h1 class="gradient-text">{{ title }}</h1>

    <p style="font-size: var(--size-step-0)">
      <span class="block">Published: {% set definedDate = date %} {% include "partials/date.njk" %}</span>
      <span class="block">Updated: {% set definedDate = updated %} {% include "partials/date.njk" %}</span>
    </p>

    {{ content | safe }}
  </div>
</article>