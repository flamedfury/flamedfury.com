---
layout: base
schema: blog
---

<article class="region blog | h-entry">
  <div class="wrapper flow prose">
    <h1 class="gradient-text | p-name">{{ bookmark.title }}</h1>

    <p class="meta">
      <a rel="author" class="p-author h-card" href="{{ meta.authorWebsite }}">{{ meta.author }}</a> bookmarked <a href="{{ bookmark.url }}" class="u-bookmark-of h-cite">
        <span class="p-name">{{ bookmark.title }}</span></a>{% set definedDate = date %} on 
        <time class="dt-published" datetime="{{ bookmark.date }}">{{ bookmark.date }}</time>
    </p>

    <div class="flow e-content">
      {{ content | safe }}
    </div>

  </div>
</article>

