---
layout: base
---

<header class="section spot-color-secondary">
  <div class="section__inner region">
    <div class="wrapper flow">
      <section class="prose text-center">
        <h1 class="fade-in">{{ title }}</h1>
      </section>
    </div>
  </div>

  {% include 'svg/divider-edgy.svg' %}
</header>

<article class="region">
  <div class="wrapper flow prose">
    {{ content | safe }}
  </div>
</article>

<article class="wrapper region">

{% set recentlyPlayed = lastfm.recenttracks.track %}

{% if recentlyPlayed.length %}
<ul class="features grid mt-l-xl" role="list" >
  {% for item in recentlyPlayed %}
    <li class="card flow clickable-card overflow-hidden" style="
    background-image: 
      linear-gradient(
      rgba(0, 0, 0, 0.5),
      rgba(0, 0, 0, 0.5)
      ),
      url('{{ item.image[3]['#text'] }}');
    object-fit: cover;
    width: 300px;
    ">
      <a href="{{ item.url }}">
        <p>{{ item.name }}</p>
        <p>{{ item.artist['#text'] }}</p>
      </a>
    </li>
  {% endfor %}
</ul>
{% endif %}

</article>