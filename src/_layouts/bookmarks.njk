---
layout: base
---

<article class="region">
  <div class="wrapper flow prose">
    <h1 class="gradient-text">{{ title }}</h1>
    {{ content | safe }}
  </div>
</article>

<article class="region">
  <div>

    <ul class="wrapper grid mt-l-xl" role="list" data-rows="masonry" data-layout="50-50">
      {% for bookmark in collections.allBookmarks | reverse %}
        <li id="{{ bookmark.data.title }}" class="card flow overflow-hidden">
          <h3>
            <a href="{{ bookmark.url | url }}">{{ bookmark.data.title }}</a>
          </h3>
          {% set definedDate = bookmark.data.date %}
          {% include "partials/date.njk" %}
          <p>{{ bookmark.data.notes }}</p>
        </li>
      {% endfor %}
    </ul>

  </div>
</article>