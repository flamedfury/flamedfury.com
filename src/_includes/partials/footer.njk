{% set activePage = page.url | url %}
<footer class="site-footer mt-l-xl psm mb-l-xl">
  {% include 'partials/h-card.njk' %}

  <div class="wrapper flow">

    <div class="">
      <nav class="text-step-min-1 cluster place-content-center" aria-label="{{ meta.navigation.ariaBottom }}">
        {%- for item in navigation.bottom %}
            <a href="{{ item.url }}" {{ helpers.getLinkActiveState(item.url, page.url) | safe }}>{{ item.text }}</a>
        {%- endfor -%}
      </nav>
    </div>

    <div class="site-foot__inner">
      <nav class="text-step-min-1 text-center" aria-label="{{ meta.navigation.ariaBottom }}">
        &copy; 1999 - {% year %}
        <a href="/" {{ indicateActiveHome }}>{{ meta.siteName }}
          <small>2402</small>
        </a>
        don't jack.
      </nav>
      <nav class="cluster" aria-label="{{ meta.navigation.ariaPlatforms }}">
        <a href="{{ meta.blog.feedLinks[0].url }}" rel="alternate" type="{{ meta.blog.feedLinks[0].type }}">
          <span class="visually-hidden">{{ meta.blog.feedLinks[0].title }}</span>
          {% svg "misc/rss" %}
        </a>
        {% for key, value in personal.platforms %}
          {% if value != "" %}
            <a href="{{ value }}" rel="me">
              <span class="visually-hidden">{{ key | capitalize }}</span>
              {% svg 'platform/' + key %}
            </a>
          {% endif %}
        {% endfor %}
      </nav>
    </div>
  </div>

</footer>