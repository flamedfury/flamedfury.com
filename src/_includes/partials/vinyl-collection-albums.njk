{%- for item in vinyl.albums -%}
<article class="content mx-auto">
  <div class="vinyl sidebar relative">
    {% image item.image, "bg-transparent", "item.alt", "(max-width: 463px) 400px, (max-width: 718px) 700px,
    (max-width: 912px) 400px, 700px" %}
    <div class="flow">
      <h3>{{ item.title }}</h3>
      <p>
        <span class="block uppercase"><strong>Info:</strong> {{ item.format }} / {{ item.year }}, {{ item.genre }}</span>
        <span class="block uppercase"><strong>Label:</strong> {{ item.label }} {{ item.code }}</span>
        <span class="block uppercase"><strong>Release:</strong> {{ item.varient }} {{ item.number }}</span>
      </p>
      <p>
        {{ item.comment }}
      </p>
    </div>
  </div>
</article>
{%- endfor -%}