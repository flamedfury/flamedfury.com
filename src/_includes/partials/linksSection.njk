{% macro renderSection(anchor, title, description, linksData) %}
<a href="#{{ anchor }}">
  <h2 id="{{ anchor }}">{{ title }}</h2>
</a>
<p>{{ description }}</p>

<ul class="blogcards | grid" role="list" data-rows="masonry" data-layout="50-50">
  <!-- loop links -->
  {% for link in linksData %}
    {% include 'partials/links.njk' %}
  {% endfor %}
</ul>
{% endmacro %}