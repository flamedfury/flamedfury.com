<h3>On deck</h3>
<ul role="list">
  {%- if movies and movies.length > 0 -%}
  <li>🍿 {{ movies[0].movie.title }} ({{ movies[0].movie.year }})</li>
  {%- endif -%}
  {%- if tv and tv.length > 0 -%}
  <li>📺 {{ tv[0].show.title }}</li>
  {%- endif -%}
  <li><script src="https://recentfm.rknight.me/now.js?u=xkx9t6bb"></script></li>
  {%- set started_books = bookshelf | filterByProperty("status", "started") -%}
  {%- if started_books.length > 0 -%}
    {%- for book in started_books | reverse -%}
  <li>📚 {{ book.title }} by {{ book.authors[0] }}</li>
    {%- endfor -%}
  {%- else -%}
    {%- set mostRecentFinishedBook = bookshelf | getMostRecentFinishedBook -%}
    {%- if mostRecentFinishedBook -%}
  <li>📚 Just finished {{ mostRecentFinishedBook.title }} by {{ mostRecentFinishedBook.authors[0] }}</li>
    {%- endif -%}
  {%- endif -%}
</ul>